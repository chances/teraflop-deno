{
  "tasks": {
    "build:debug": "deno bundle -c debugger/tsconfig.json debugger/src/app.ts debugger/public/app.js",
    "watch:debug": "deno bundle --watch -c debugger/tsconfig.json debugger/src/app.ts debugger/public/app.js",
    "lint": "deno task lint:main && deno task lint:debug",
    "lint:main": "deno check mod.ts",
    "lint:debug": "deno check mod.ts",
    // Open chrome://inspect
    // "debug": "deno run --inspect-wait --unstable-ffi --unstable-webgpu --allow-ffi --allow-read --allow-write --allow-env examples/triangle.ts",
    "debug": "deno task build:debug && deno run --unstable-ffi --allow-ffi --allow-read --allow-write --allow-env --allow-net=0.0.0.0:8080,deno.land:443,jsr.io:443,github.com:443,objects.githubusercontent.com:443 debugger/mod.ts",
    "triangle": "deno run --unstable-webgpu --unstable-ffi --allow-ffi --allow-net=github.com,objects.githubusercontent.com --allow-read --allow-write --allow-env examples/triangle.ts",
    // TODO: https://github.com/deno-windowing/wpack?tab=readme-ov-file#readme
    "pack": "deno compile --location https://snow.llc/teraflop/triangle --unstable-webgpu --unstable-ffi --allow-ffi --allow-read --allow-write --allow-env --no-terminal examples/triangle.ts"
  },
  "fmt": {
    "lineWidth": 120
  },
  "imports": {
    "@chances/render-loop": "jsr:@chances/render-loop@^0.8.0",
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/async": "jsr:@std/async@^1.0.0",
    "@std/fs": "jsr:@std/fs@^0.229.3",
    "@std/path": "jsr:@std/path@^1.0.1",
    "@std/webgpu": "jsr:@std/webgpu@^0.224.5",
    "@webview/webview": "jsr:@webview/webview@^0.8.0"
  }
}
